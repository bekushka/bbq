<h1>Редактирование события</h1>

<div class="row">
  <div class="col-md-6 buffer-top">

    <%= render 'form' %>
  </div>
</div>
<% if current_user_can_edit?(@event) %>
  <div class="buffer-top">
    <%= link_to t('links.destroy_event_button'), event_path(@event), data: { confirm: t('links.destroy_event') },
                method: :delete, class: 'btn btn-danger my-2' %>
  </div>
<% end %>
