<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field my-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control w-50', placeholder: 'Почта' %>
  </div>

  <div class="field my-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> знаков минимум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control w-50', placeholder: 'Пароль' %>
  </div>

  <div class="field my-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control w-50',
                         placeholder: 'Подтверждение пароля' %>
  </div>

  <div class="actions my-2">
    <%= f.submit t('links.sign_up'), class: 'btn btn-info' %>
  </div>
<% end %>


