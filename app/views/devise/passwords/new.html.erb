<h2>Забыли пароль?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field my-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control w-50', placeholder: 'Почта' %>
  </div>

  <div class="actions my-2">
    <%= f.submit t('links.password_reset'), class: 'btn btn-info my-2' %>
  </div>
<% end %>

<%= link_to t('links.back'), :back, class: 'btn btn-info my-2' %>
