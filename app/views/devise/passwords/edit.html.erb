<h2>Сброс пароля</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :new_password %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> знаков минимум)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control w-50', placeholder: 'Новый пароль' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control w-50', placeholder: 'Подтверждение пароля' %>
  </div>

  <div class="actions">
    <%= f.submit t('links.change_password'), class: 'btn btn-info my-2' %>
  </div>
<% end %>
